@using CodingEvents.Models @*import model ensure this template has access to Event type *@

<!--that calls model will be type List<Event>-->
@model List<Tag>

<h1>All Tags</h1>

@if (Model.Count == 0)
{
    <p>No tags yet!</p>
    <a asp-controller="Tag" asp-action="Create"> Create new tags</a>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
        </tr>
        @foreach (Tag tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
            </tr>
        }
    </table>

}