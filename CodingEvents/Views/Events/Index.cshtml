<h1>Coding Events</h1>
    <!--create link to form that will direct user to action method Add -->
<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var evt in ViewBag.events)
        {
    <tr>
        <td>@evt.Id</td>
        <td>@evt.Name</td>
        <td>@evt.Description</td>
    </tr>
        }
    </table>
}

