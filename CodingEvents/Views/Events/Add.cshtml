@using CodingEvents.ViewModels;

<!--pass in instance of model-->
@model AddEventViewModel;


<h1>Add Event</h1>

<form method="post" asp-controller="Events" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <!--specify which property’s validation error messages should be displayed if the conditions are not met.-->
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" type="text" class="form-control" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventLocation"></label>
        <input asp-for="EventLocation" type="text" class="form-control" />
        <span asp-validation-for="EventLocation"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfAttendees">Number of Attendees</label>
        <input asp-for="NumberOfAttendees" type="text" class="form-control" />
        <span asp-validation-for="NumberOfAttendees"></span>
    </div>

    <input type="submit" value="Add Event" />
</form>